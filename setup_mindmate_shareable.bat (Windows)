@echo off
python --version >nul 2>&1
if %errorlevel% neq 0 (
    echo Python 3.8+ is required. Install from https://www.python.org/downloads/
    pause
    exit /b
)

set PROJECT_DIR=%USERPROFILE%\MindMateAI
if not exist "%PROJECT_DIR%" mkdir "%PROJECT_DIR%"
cd "%PROJECT_DIR%"

echo Downloading latest MindMate AI Python file...
powershell -Command "Invoke-WebRequest -Uri 'https://raw.githubusercontent.com/martinsaderibigbe/MindMateAI/refs/heads/main/mindmate_ai_dashboard_shareable.py' -OutFile 'mindmate_ai_dashboard_shareable.py'"

if not exist "venv" python -m venv venv
call venv\Scripts\activate
python -m pip install --upgrade pip
pip install streamlit openai pandas matplotlib plotly wordcloud

streamlit run mindmate_ai_dashboard_shareable.py
pause
