@echo off
:: Check Python version
python --version >nul 2>&1
if %errorlevel% neq 0 (
    echo Python 3.8+ is required. Install from https://www.python.org/downloads/
    pause
    exit /b
)

:: Create project directory
set PROJECT_DIR=%USERPROFILE%\MindMateAI
if not exist "%PROJECT_DIR%" mkdir "%PROJECT_DIR%"
cd "%PROJECT_DIR%"

:: Copy Python file manually or from GitHub
:: Example: powershell -Command "Invoke-WebRequest -Uri 'https://raw.githubusercontent.com/martinsaderibigbe/MindMateAI/refs/heads/main/mindmate_ai_dashboard_shareable.py' -OutFile 'mindmate_ai_offline_web.py'"

:: Create virtual environment if not exist
if not exist "venv" python -m venv venv

:: Activate virtual environment
call venv\Scripts\activate

:: Upgrade pip and install dependencies
python -m pip install --upgrade pip
pip install streamlit pandas matplotlib plotly wordcloud transformers torch wikipedia

:: Run the chatbot
streamlit run mindmate_ai_offline_web.py
pause

